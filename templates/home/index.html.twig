{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Bienvenu sur mon blog</h1>
        <h1>Liste des articles</h1>
        <div class="row">
            {% for article in articles %}
                <div class="d-flex flex-start mt-4">
                   <div class="flex-grow-1 flex-shrink-1">
                        <div>
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="mb-1">
                                    <span class="commentAuthor">{{ article.author.username }}</span>
                                    <span class="small">- {{ article.createdAt | date('Y-m-d h:i') }}</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card mb-4 shadow-sm" height="225" width="100%">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.title }}</h2>
                            <p class="card-text">{{ article.content }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary" type="button">View</a>
                                    <a href="#" class="btn btn-sm btn-outline-secondary" type="button">Edit</a>
                                    <a href="#" class="btn btn-sm btn-outline-danger" type="button">Delete</a>
                                </div>
{#                                <small class="text-muted">{{ article.price }}â‚¬</small>#}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
