<section class="gradient-custom justify-content-center">
    <div class="container justify-content-center">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body p-4">
                        <h2>Les Commentaires</h2>
                        <div class="row">
                            <div class="col">
                                {% for comment in article.comments %}
                                    <div class="d-flex flex-start mt-4">
                                        <i class="fa-solid fa-user rounded-circle shadow-1-strong me-3" style="width: 65px; height:65px; font-size: 2em; color: #479F9F;"></i>
                                        <div class="flex-grow-1 flex-shrink-1">
                                            <div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h3 class="mb-1">
                                                        <span class="commentAuthor">{{ comment.author.getUsername() }}</span>
                                                        <span class="small">- {{ comment.createdAt | date('Y-m-d h:i') }}</span>
                                                    </h3>
                                                </div>
                                                <p class="small mb-0 ">
                                                    <span class="commentContent">{{ comment.content }}</span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            {% if app.user %}
                                <div id="ajout-commentaire">
                                    {{ form_start(commentForm) }}
                                    {{ form_widget(commentForm.content) }}
                                    <div class="buttonsPlacement">
                                        <button class="mt-3" type="submit"> Envoyer </button>
                                    </div>
                                    {{ form_end(commentForm) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>